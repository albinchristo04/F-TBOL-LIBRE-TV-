---
const leagues = [
  { name: 'Liga MX', href: '/liga-mx-en-vivo/', color: '#00a86b' },
  { name: 'Champions League', href: '/champions-league-en-vivo/', color: '#1a237e' },
  { name: 'Premier League', href: '/premier-league-en-vivo/', color: '#38003c' },
  { name: 'La Liga', href: '/la-liga-en-vivo/', color: '#ee0000' },
  { name: 'Serie A', href: '/serie-a-en-vivo/', color: '#008fd7' },
  { name: 'Copa Libertadores', href: '/copa-libertadores-en-vivo/', color: '#1a237e' },
];
---

<div class="league-grid">
  {leagues.map(league => (
    <a href={league.href} class="league-card" style={`--league-color: ${league.color}`}>
      <div class="league-icon">⚽</div>
      <h3 class="league-name">{league.name}</h3>
      <span class="league-cta">Ver partidos →</span>
    </a>
  ))}
</div>

<style>
  .league-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1.5rem;
    margin: 2rem 0;
  }

  .league-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2rem 1.5rem;
    background: white;
    border: 2px solid #e0e0e0;
    border-radius: 0.75rem;
    text-decoration: none;
    color: #333;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .league-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: var(--league-color);
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .league-card:hover {
    border-color: var(--league-color);
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .league-card:hover::before {
    transform: scaleX(1);
  }

  .league-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .league-name {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0 0 0.5rem;
    text-align: center;
  }

  .league-cta {
    font-size: 0.9rem;
    color: var(--league-color);
    font-weight: 600;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s ease;
  }

  .league-card:hover .league-cta {
    opacity: 1;
    transform: translateY(0);
  }

  @media (max-width: 768px) {
    .league-grid {
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 1rem;
    }

    .league-card {
      padding: 1.5rem 1rem;
    }

    .league-icon {
      font-size: 2.5rem;
    }

    .league-name {
      font-size: 1rem;
    }
  }
</style>
