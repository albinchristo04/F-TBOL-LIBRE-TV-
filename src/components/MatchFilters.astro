---
const leagues = [
  { value: 'all', label: 'Todas las Ligas' },
  { value: 'Liga MX', label: 'Liga MX' },
  { value: 'Champions League', label: 'Champions League' },
  { value: 'Premier League', label: 'Premier League' },
  { value: 'La Liga', label: 'La Liga' },
  { value: 'Serie A', label: 'Serie A' },
  { value: 'Copa Libertadores', label: 'Copa Libertadores' },
];

const timeFilters = [
  { value: 'all', label: 'Todos los Horarios' },
  { value: 'today', label: 'Hoy' },
  { value: 'live', label: 'En Vivo' },
  { value: 'upcoming', label: 'Pr√≥ximos' },
];
---

<div class="match-filters">
  <div class="filter-group">
    <label for="league-filter">Filtrar por Liga:</label>
    <select id="league-filter" class="filter-select">
      {leagues.map(league => (
        <option value={league.value}>{league.label}</option>
      ))}
    </select>
  </div>

  <div class="filter-group">
    <label for="time-filter">Filtrar por Horario:</label>
    <select id="time-filter" class="filter-select">
      {timeFilters.map(filter => (
        <option value={filter.value}>{filter.label}</option>
      ))}
    </select>
  </div>

  <div class="filter-group">
    <label for="search-filter">Buscar:</label>
    <input
      type="text"
      id="search-filter"
      class="filter-input"
      placeholder="Equipo o liga..."
      aria-label="Buscar partidos"
    />
  </div>
</div>

<script>
  const leagueFilter = document.getElementById('league-filter');
  const timeFilter = document.getElementById('time-filter');
  const searchFilter = document.getElementById('search-filter');

  // Event listeners for filters
  leagueFilter?.addEventListener('change', (e) => {
    const league = e.target.value;
    window.dispatchEvent(new CustomEvent('filterLeague', { detail: { league } }));
  });

  timeFilter?.addEventListener('change', (e) => {
    const time = e.target.value;
    window.dispatchEvent(new CustomEvent('filterTime', { detail: { time } }));
  });

  searchFilter?.addEventListener('input', (e) => {
    const search = e.target.value;
    window.dispatchEvent(new CustomEvent('filterSearch', { detail: { search } }));
  });
</script>

<style>
  .match-filters {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 1.5rem;
    background: #f9f9f9;
    border-radius: 0.5rem;
    margin-bottom: 2rem;
  }

  .filter-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .filter-group label {
    font-weight: 600;
    font-size: 0.9rem;
    color: #333;
  }

  .filter-select,
  .filter-input {
    padding: 0.75rem;
    border: 1px solid #e0e0e0;
    border-radius: 0.25rem;
    font-size: 1rem;
    font-family: inherit;
    background: white;
    transition: border-color 0.3s ease;
  }

  .filter-select:focus,
  .filter-input:focus {
    outline: none;
    border-color: #667eea;
  }

  .filter-input {
    width: 100%;
  }

  @media (min-width: 768px) {
    .match-filters {
      flex-direction: row;
      align-items: flex-end;
    }

    .filter-group {
      flex: 1;
    }
  }
</style>
