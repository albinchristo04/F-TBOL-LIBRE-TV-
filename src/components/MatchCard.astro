---
interface Props {
  match: any;
  featured?: boolean;
}

const { match, featured = false } = Astro.props;
const matchDate = new Date(match.date);
const isLive = new Date() < new Date(match.date);
---

<a href={`/${match.slug}/`} class={`match-card ${featured ? 'featured' : ''}`}>
  <div class="match-header">
    <span class="league">{match.league}</span>
    {isLive && <span class="live-badge">EN VIVO</span>}
  </div>

  <div class="match-content">
    <div class="team team-a">
      <div class="team-name">{match.team_a}</div>
    </div>

    <div class="vs">vs</div>

    <div class="team team-b">
      <div class="team-name">{match.team_b}</div>
    </div>
  </div>

  <div class="match-footer">
    <div class="date">
      {matchDate.toLocaleDateString('es-ES', { month: 'short', day: 'numeric' })}
    </div>
    <div class="time">{match.time}</div>
  </div>

  <span class="cta">Ver en vivo â†’</span>
</a>

<style>
  .match-card {
    display: flex;
    flex-direction: column;
    background: white;
    border: 1px solid #e0e0e0;
    border-radius: 0.75rem;
    overflow: hidden;
    text-decoration: none;
    color: #333;
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
  }

  .match-card:hover {
    border-color: #667eea;
    box-shadow: 0 8px 16px rgba(102, 126, 234, 0.15);
    transform: translateY(-4px);
  }

  .match-card.featured {
    border: 2px solid #667eea;
    background: linear-gradient(135deg, #f8f9ff 0%, #f0f4ff 100%);
  }

  .match-header {
    padding: 0.75rem 1rem;
    background: #f9f9f9;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #e0e0e0;
  }

  .league {
    font-size: 0.85rem;
    font-weight: 600;
    color: #667eea;
    text-transform: uppercase;
  }

  .live-badge {
    background: #ff4444;
    color: white;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.75rem;
    font-weight: 700;
    animation: pulse 1s infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }

  .match-content {
    padding: 1.5rem;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 1rem;
    align-items: center;
    flex: 1;
  }

  .team {
    text-align: center;
  }

  .team-name {
    font-weight: 600;
    font-size: 1rem;
    word-break: break-word;
  }

  .vs {
    font-size: 0.85rem;
    color: #999;
    text-align: center;
  }

  .match-footer {
    padding: 0.75rem 1rem;
    background: #f9f9f9;
    border-top: 1px solid #e0e0e0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.9rem;
    color: #666;
  }

  .cta {
    position: absolute;
    bottom: 1rem;
    right: 1rem;
    color: #667eea;
    font-weight: 600;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .match-card:hover .cta {
    opacity: 1;
  }
</style>
