---
import MatchCard from './MatchCard.astro';

interface Props {
  matches: any[];
}

const { matches } = Astro.props;
---

<div class="featured-grid">
  {matches.map(match => (
    <MatchCard match={match} featured={true} />
  ))}
</div>

<style>
  .featured-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  @media (max-width: 768px) {
    .featured-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
