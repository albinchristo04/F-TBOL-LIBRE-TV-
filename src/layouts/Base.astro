---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  ogType?: string;
  robots?: string;
  keywords?: string;
  lastModified?: string;
}

const {
  title,
  description,
  canonical = Astro.url.href,
  ogImage = 'https://futbollibre.velcuri.io/og-image.jpg',
  ogType = 'website',
  robots = 'index, follow',
  keywords = 'fútbol, en vivo, streaming, gratis',
  lastModified = new Date().toISOString(),
} = Astro.props;

// SEO Title (50-60 chars for Bing)
const seoTitle = title.length > 60 ? title.substring(0, 57) + '...' : title;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <!-- Character encoding and viewport -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />

    <!-- SEO Meta Tags (Bing focused) -->
    <title>{seoTitle}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="robots" content={robots} />
    <meta name="language" content="Spanish" />
    <meta name="revisit-after" content="2 days" />
    <link rel="canonical" href={canonical} />

    <!-- Open Graph (Social sharing - Bing considers social signals) -->
    <meta property="og:type" content={ogType} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={canonical} />
    <meta property="og:site_name" content="Fútbol Libre TV" />
    <meta property="og:locale" content="es_ES" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Last Modified (Bing freshness signal) -->
    <meta http-equiv="last-modified" content={lastModified} />

    <!-- Bing verification (replace with actual code from Webmaster Tools) -->
<meta name="msvalidate.01" content="F01125A32DD0550253E1CD24EAA0B21D" />

    <!-- Favicon and site icons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <!-- Preconnect to external domains (performance) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://raw.githubusercontent.com" />

    <!-- Styles -->
    <style is:global>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        font-size: 16px;
        line-height: 1.6;
        color: #1a1a1a;
        background-color: #fff;
      }

      body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      main {
        flex: 1;
      }

      /* Mobile first */
      @media (max-width: 768px) {
        html {
          font-size: 14px;
        }
      }
    </style>
  </head>

  <body>
    <Header />
    <Navigation />

    <main>
      <slot />
    </main>

    <Footer />

    <!-- Cloudflare Web Analytics (non-intrusive) -->
    <script defer src='https://static.cloudflareinsights.com/beacon.min.js'
            data-cf-beacon='{"token": "your-cloudflare-web-analytics-token"}'></script>
  </body>
</html>
